extends layout

block content
  h1= title
  p Welcome to #{title}. My name is Rajitha Bandaru
  - let items = results
  div(class="container-fluid")
    div(class="row")
      each shoes, index in items
        div(class="col-sm-2" onclick=`buy(${index+1})`) #{shoes.shoe_brand} - #{shoes.shoe_color} - $#{shoes.shoe_cost}
  
  script.
    function buy(index){
      alert(`You purchased item ${index}`);
    }